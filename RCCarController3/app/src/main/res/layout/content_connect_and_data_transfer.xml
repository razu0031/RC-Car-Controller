<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.var.rccarcontroller.ConnectAndDataTransferActivity"
    tools:showIn="@layout/connect_and_data_transfer_activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarMain2"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#008c7f"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"
            android:text="Connected To"
            android:textColor="#ceffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:id="@+id/deviceNameUnPairOrConnectTextViewId"
            android:layout_marginRight="13dp"
            android:text="Device Name"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:textSize="17sp"/>

    </FrameLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:foreground="@drawable/bottom_shadow"
        android:background="#84009688"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/forwardButtonId"
                android:background="@drawable/forward_button_background"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="-35dp"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:padding="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:id="@+id/forwardLeftButtonId"
                        android:background="@drawable/forward_left_button_background"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:id="@+id/forwardRightButtonId"
                        android:background="@drawable/forward_right_button_background"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:padding="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:id="@+id/sharpLeftButtonId"
                        android:background="@drawable/sharp_left_button_background"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:id="@+id/uTurnButtonId"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:padding="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:id="@+id/sharpRightButtonId"
                        android:background="@drawable/sharp_right_button_background"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:padding="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:id="@+id/backwardLeftButtonId"
                        android:background="@drawable/backward_left_button_background"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:padding="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:id="@+id/backwardRightButtonId"
                        android:background="@drawable/backward_right_button_background"
                        />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:layout_marginTop="-30dp"
                android:layout_gravity="center"
                android:id="@+id/backwardButtonId"
                android:background="@drawable/backward_button_background"
                />

            <!--<Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_background_layout"
                android:text="Connect"
                android:id="@+id/connectButtonId"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:padding="0dp"/>-->

            <!--<Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/button_background_layout"
                android:text="Disconnect"
                android:textAllCaps="false"
                android:id="@+id/unPairButtonId"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:padding="0dp"/>-->

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_background_layout"
                android:text="Disonnect"
                android:id="@+id/disconnectButtonId"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:padding="0dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>

