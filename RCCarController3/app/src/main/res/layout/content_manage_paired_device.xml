<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.var.rccarcontroller.ManagePairedDeviceActivity"
    tools:showIn="@layout/manage_paired_device_activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarMain2"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#008c7f"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"
            android:text="Manage Device"
            android:textColor="#ceffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:id="@+id/deviceNameUnPairOrConnectTextViewId"
            android:layout_marginRight="13dp"
            android:text="Device Name"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:textSize="17sp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:foreground="@drawable/bottom_shadow"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#84009688"
            android:padding="5dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background_layout"
                android:text="Connect"
                android:id="@+id/connectButtonId"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:padding="0dp"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_background_layout"
                android:text="Unpair"
                android:textAllCaps="false"
                android:id="@+id/unPairButtonId"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:padding="0dp"/>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>
