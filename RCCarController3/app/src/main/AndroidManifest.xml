<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.var.rccarcontroller">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ManagePairedDeviceActivity"
            android:label="@string/title_activity_manage_paired_device"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".ConnectAndDataTransferActivity"
            android:label="@string/title_activity_connect_and_data_transfer"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".ledControl"
            android:label="@string/title_activity_connect_and_data_transfer"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>
